<h2 class="text-center"><%= t "dashboard.title" %></h2>

<div class="mt-12">
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <i class="bi bi-person"></i> <%= t("dashboard.user_info") %>
        </div>
        <div class="card-body">
          <p><strong><%= t("dashboard.name") %>:</strong> <%= current_user.name %></p>
          <p><strong><%= t("dashboard.email") %>:</strong> <%= current_user.email %></p>
          <p><strong><%= t("dashboard.role") %>:</strong> <%= current_user.role %></p>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-success text-white">
          <i class="bi bi-bar-chart"></i> <%= t("dashboard.system_info") %>
        </div>
        <div class="card-body">
          <ul class="list-group">
            <li class="list-group-item">
              <strong><%= t("dashboard.admin.departments") %>:</strong> <%= @departments_count %>
            </li>
            <li class="list-group-item">
              <strong><%= t("dashboard.admin.managers") %>:</strong> <%= @managers_count %>
            </li>
            <li class="list-group-item">
              <strong><%= t("dashboard.admin.total_users") %>:</strong> <%= @users_count %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
