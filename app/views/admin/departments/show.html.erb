<h1 class="text-center"><%= t "departments.show.title" %></h1>

<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= @department.name %></h5>
    <p class="card-text"><strong><%= t "departments.show.description" %>:</strong> <%= @department.description.presence || t("departments.show.no_description") %></p>
    <p class="card-text"><strong><%= t "departments.show.created_at" %>:</strong> <%= l(@department.created_at, format: :long) %></p>
    <p class="card-text"><strong><%= t "departments.show.updated_at" %>:</strong> <%= l(@department.updated_at, format: :long) %></p>
  </div>
</div>

<br>

<%= link_to t("departments.show.back"), admin_departments_path, class: "btn btn-secondary" %>
